{
  "manifest_version": 3,
  "name": "Smart YouTube Bookmarker",
  "version": "1.0",
  "description": "Bookmark and jump to YouTube timestamps with notes.",
  "host_permissions": [
  "*://www.youtube.com/*",
  "https://www.googleapis.com/*",
  "*://youtube.com/*",
  "*://*.youtube.com/*"
],
"permissions": [
  "scripting",
  "storage",
  "activeTab",
  "webRequest",
  "webNavigation"
],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/YT_Bookmark2.png",
      "48": "icons/YT_Bookmark2.png",
      "128": "icons/YT_Bookmark2.png"
    }
  },
  
  "web_accessible_resources": [
      {
        "resources": [
          "icons/bookmark.png"
        ],
        "matches": ["*://www.youtube.com/*"]
      }
    ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
